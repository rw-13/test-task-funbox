.index
	// position absolute
	// top 50%
	// left 50%
	// transform translateX(-50%) translateY(-50%)

	&__list
		display flex
		justify-content space-around
		flex-wrap wrap
		
		@media(max-width: 700px) {
			flex-direction column
			align-items center
		}
		
	&__item
		margin 0 10px 25px
		
		&_active
			.index__banner-order
				display none

			.index__banner-desc
				display inline-block				
		
		&_disable
			& .index__banner-desc
				color #ffff66
		
	&__banner-order
		display inline-block
		width 100%
		margin-top 20px
		font-size 13px
		font-weight 400
		text-align center
		color #FFF
		
	&__banner-desc
		display none
		width 100%
		margin-top 20px
		font-size 13px
		font-weight 400
		text-align center
		color #FFF
		