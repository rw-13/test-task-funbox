@font-face
  font-family Exo2_0Thin
  src url("../fonts/Exo2_0Thin.eot")
  src url("../fonts/Exo2_0Thin.eot#iefix") format('embedded-opentype'), url("../fonts/Exo2_0Thin.woff2") format('woff2'), url("../fonts/Exo2_0Thin.woff") format('woff'), url("../fonts/Exo2_0Thin.ttf") format('truetype'), url("../fonts/Exo2_0Thin.svg#RobotoBold") format('svg')
  font-style normal
  font-weight 100

body
	min-height 100%
	width 100%
	margin 0
	font-family Trebuchet MS
	font-weight 400
	background url('../images/pattern.jpg')
	background-size contain
	background-repeat-y repeat
	background-repeat-x repeat
	background-position left top
	
	@media(min-height: 700px) and (max-width: 700px)
		background-size auto
	
h1
	font-family Exo2_0Thin
	font-size 48px
	font-weight 100
	text-align center
	color #ffffff
	margin 0 0 30px

h2
	margin 0 0 30px
	
p
	margin 0
	
a
	display inline-block
	color #1698d9
	border-bottom 1px dashed #1698d9
	text-decoration none
	
	&:hover
		text-decoration none