.banner
	display flex
	flex-direction column
	align-items flex-end
	position relative
	cursor pointer

	&:before
		content ""
		display inline-block
		height 44px
		width 44px
		position absolute
		left 1px
		top 0
		z-index 10
		background linear-gradient(-45deg,#f2f2f2,#f2f2f2 28px,#1698d9 0,#1698d9 32px,transparent 0)

	&__content
		display block
		height 435px
		width 320px
		margin-top -1px
		box-sizing border-box
		padding-left 45px
		position relative
		overflow hidden
		background-color #f2f2f2
		border 4px solid #1698d9
		border-top none
		border-radius 0 0 10px 10px

		&:after
			content ""
			display inline-block
			height 470px
			width 380px
			position absolute
			bottom -200px
			left -30px
			background background url('../images/bigfatcat.png')
			background-color transparent
			background-size contain
			background-repeat no-repeat

	&__top
		display flex
		align-items center
		height 40px
		width calc(100% - 48px)	
		bottom 100%
		right 0px
		background #f2f2f2
		border-top 4px solid #1698d9
		border-right 4px solid #1698d9
		border-radius 0 10px 0 0

	&__category
		margin-left 5px
		font-size 16px
		font-weight 400
		line-height 1.2
		text-align left
		color #666666

	&__title
		margin-bottom 20px

		& h2
			margin 0
			display block
			font-size 48px
			font-weight 700

		& span
			display block
			font-size 24px
			font-weight 700
			
	&__bonus
		font-size 14px
		font-weight 400
		
		& p
			color #666666

	&_active	
		&:before
			background linear-gradient(-45deg,#f2f2f2,#f2f2f2 28px,#d91667 0,#d91667 32px,transparent 0)

		& ^[0]__content
			border 4px solid #d91667
			border-top none

		& ^[0]__top
			border-top 4px solid #d91667
			border-right 4px solid #d91667

		& .circle
			background #d91667

	&_disable
		pointer-events none
		&:before
			background linear-gradient(-45deg,#f2f2f2,#f2f2f2 28px,#b3b3b3 0,#b3b3b3 32px,transparent 0)

		& ^[0]__content
			border 4px solid #b3b3b3
			border-top none
			&:after
				// filter opacity(50%)
				opacity 0.5

		& ^[0]__top
			border-top 4px solid #b3b3b3
			border-right 4px solid #b3b3b3

		& .circle
			background #b3b3b3

		& ^[0]__category,
		& ^[0]__title,
		& ^[0]__bonus
			color #b3b3b3